    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plant_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
